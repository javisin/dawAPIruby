<div class="">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Menú", admin_path %>
    </li>
    <li class="breadcrumb-item active">Crear talla</li>
    <div class="ml-auto"><%= link_to "Cerrar sesión", admin_logOut_path, :class => 'text-dark' %></div>
  </ol>
</div>
<div class="container">
  <section class="mb-4 bg-light pb-3 rounded border border-dark px-5 mt-5">

    <h1 class="font-weight-bold my-4">Crear talla</h1>
    <%= form_for :size, url: api_v1_sizes_path, method: :post do |f |%>
      <div class="form-group row">
        <%= f.label :value, 'Talla:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :value, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :quantity, 'Cantidad:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :quantity, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :product_id, 'Producto:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :product_id, :class => 'form-control' %>
        </div>
      </div>

      <div class="text-center my-4">
        <%= f.submit 'Guardar talla', :class => 'btn btn-primary active'%>
      </div>

    <% end %>
  </section>
</div>