<div class="">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Menú", admin_path %>
    </li>
    <li class="breadcrumb-item active">Editar usuario</li>
    <div class="ml-auto"><%= link_to "Cerrar sesión", admin_logOut_path, :class => 'text-dark' %></div>
  </ol>
</div>
<div class="container">
  <section class="mb-4 bg-light pb-3 rounded border border-dark px-5 mt-5">

    <h1 class="font-weight-bold my-4">Editar usuario</h1>
    <%= form_for :user, url: api_v1_user_path(@user), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :name, 'Nombre:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :surname, 'Apellidos:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :surname, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :username, 'Nombre de usuario:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :username, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :email, 'Correo electrónico:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :email, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, 'Contraseña:', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :country, 'País (Opcional):', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :country, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :postalcode, 'Código Postal (Opcional):', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :postalcode, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :phone, 'Número de teléfono (Opcional):', :class => 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
          <%= f.text_field :phone, :class => 'form-control' %>
        </div>
      </div>

      <div class="text-center my-4">
        <%= f.submit 'Guardar cambios', :class => 'btn btn-primary active'%>
      </div>
    <% end %>

  </section>
</div>